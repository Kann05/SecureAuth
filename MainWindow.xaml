        <Image x:Name="Land" Source="/Auth System;component\Images/Ground.png" HorizontalAlignment="Left" Height="100" Margin="0,315,0,0" VerticalAlignment="Top" Width="133"/>
        <Image x:Name="Lan1" Source="/Auth System;component\Images/Ground.png" HorizontalAlignment="Left" Height="100" Margin="130,315,0,0" VerticalAlignment="Top" Width="133"/>
        <Image x:Name="Lan2" Source="/Auth System;component\Images/Ground.png" HorizontalAlignment="Left" Height="100" Margin="260,315,0,0" VerticalAlignment="Top" Width="133"/>
        <Image x:Name="Land3" Source="/Auth System;component\Images/Ground.png" HorizontalAlignment="Left" Height="100" Margin="391,315,0,0" VerticalAlignment="Top" Width="133"/>
        <Image x:Name="Land4" Source="/Auth System;component\Images/Ground.png" HorizontalAlignment="Left" Height="100" Margin="521,315,0,0" VerticalAlignment="Top" Width="133"/>
        <Image x:Name="Land5" Source="/Auth System;component\Images/Ground.png" HorizontalAlignment="Left" Height="100" Margin="653,315,0,0" VerticalAlignment="Top" Width="133"/>
        <Image x:Name="tree2" Source="/Auth System;component\Images/tree2.png" HorizontalAlignment="Left" Height="140" Margin="667,275,0,0" VerticalAlignment="Top" Width="133"/>
